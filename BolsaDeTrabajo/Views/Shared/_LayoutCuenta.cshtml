<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.2/css/all.min.css" integrity="sha512-HK5fgLBL+xu6dm/Ii3z4xhlSUyZgTT9tuc/hSrtw6uzJOvgRr2a9jyxxT1ely+B+xFAmJKVSTbpM/CuL7qxO8w==" crossorigin="anonymous" />
    <title>UPDS Trabaja</title>
    <link rel="shortcut icon" href="~/Content/img/Logos/isologo-color-upds_800x800i.png" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/css/bootstrap.min.css" integrity="sha384-B0vP5xmATw1+K9KRQjQERJvTumQW0nPEzvF6L/Z6nronJ3oUOFUFpCjEUQouq2+l" crossorigin="anonymous">
    <script src="https://code.jquery.com/jquery-3.6.0.js" integrity="sha256-H+K7U5CnXl1h5ywQfKtSj8PCmoN9aaq30gDh27Xc0jk=" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-Piv4xVNRyMGpqkS2by6br4gNJ7DXjqk09RmUpJ8jgGtD7zP9yug3goQfGII0yAns" crossorigin="anonymous"></script>

    <link rel="stylesheet" href="~/Content/css/portada.css">
    <link href="~/style.css" rel="stylesheet" />
    @*@Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/bootstrap")*@

    <script src="~/cute-alert.js"></script>

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/jquery-confirm/3.3.2/jquery-confirm.min.css">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-confirm/3.3.2/jquery-confirm.min.js"></script>

</head>
<body class="py-0">
    <div class="sticky-top">
        <nav id="navInicio" class="navbar navbar-expand-sm style">
            <img src="~/Content/img/Logos/upds-blanco.png" alt="logo-upds" width="40" height="40" class="mt-1 mb-1 mr-3" />

            <a class="navbar-brand" href="@Url.Action("Index","Login")">UPDS</a>
            <button class="navbar-toggler" style="color:white;" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
                    aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <i class="fas fa-bars ico"></i>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                @RenderSection("scripts", required: false)
                @{
                    var rutai = HttpContext.Current.Request.RequestContext.RouteData.Values["controller"].ToString();
                    var actioni = HttpContext.Current.Request.RequestContext.RouteData.Values["action"].ToString();
                }
                @if (rutai == "Login")
                {
                    <ul style="font-family: Inter,sans-serif;" class="navbar-nav mr-auto mr-auto text-center d-block d-sm-none pb-2 pb-sm-0">
                        <li class="nav-item active">
                            <a class="nav-link" href="@Url.Action("Index", "Portada")">
                                Portada <span class="sr-only">(current)</span>
                            </a>
                        </li>
                        <li class="nav-item"> <a class="nav-link" href="#" data-toggle="modal" data-target="#registrarModal">Registrar</a></li>

                    </ul>
                    <ul style="font-family: Inter,sans-serif;" class="navbar-nav mr-auto text-center d-none d-sm-flex">
                        <li class="nav-item active">
                            <a class="nav-link" href="@Url.Action("Index", "Portada")">
                                Portada <span class="sr-only">(current)</span>
                            </a>
                        </li>
                        <li class="nav-item"> <a class="nav-link" href="#" data-toggle="modal" data-target="#registrarModal">Registrar</a></li>
                    </ul>
                }
                @RenderSection("scripts", required: false)
                @{
                    var rutap = HttpContext.Current.Request.RequestContext.RouteData.Values["controller"].ToString();
                    var actionp = HttpContext.Current.Request.RequestContext.RouteData.Values["action"].ToString();
                }
                @if (rutap == "Portada")
                {
                    <ul style="font-family: Inter,sans-serif;" class="navbar-nav mr-auto text-center d-none d-sm-flex">
                        <li class="nav-item"> <a class="nav-link" href="#seccion1">Inicio</a></li>
                        <li class="nav-item"> <a class="nav-link" href="#seccion2">Descripción</a></li>
                        <li class="nav-item"> <a class="nav-link" href="#seccion3">Interés</a></li>
                        <li class="nav-item"> <a class="nav-link" href="#seccion4">Interés Empresa</a></li>
                        @*<li class="nav-item"> <a class="nav-link" href="#seccion5">Crear Cuenta</a></li>*@
                    </ul>
                    <ul style="font-family: Inter,sans-serif;" class="navbar-nav mr-auto text-center d-block d-sm-none pb-2 pb-sm-0">
                        <li class="nav-item"> <a class="nav-link" href="#seccion1">Inicio</a></li>
                        <li class="nav-item"> <a class="nav-link" href="#seccion2">Descripción</a></li>
                        <li class="nav-item"> <a class="nav-link" href="#seccion3">Interés</a></li>
                        <li class="nav-item"> <a class="nav-link" href="#seccion4">Interés Empresa</a></li>
                        @*<li class="nav-item"> <a class="nav-link" href="#seccion5">Crear Cuenta</a></li>*@
                    </ul>
                }

            </div>
        </nav>
    </div>

    <div class="container-fluid mx-0 px-0">
        @RenderBody()
        <div class="modal fade" id="registrarModal" data-backdrop="static" tabindex="-1"
             aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered modal-sm">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLabel">Registrar:</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <div class="d-flex justify-content-center align-items-center h-100 w-100">
                            <div class="links-list">
                                <div class="row">
                                    <div class="col-sm-6">
                                        <a class="tooltip-test ico-animation text-center" title='EMPRESA' href="@Url.Action("Index","Empresas")"><i class="fas fa-building"></i></a>
                                        <p class="text-center">Empresa</p>
                                    </div>
                                    <div class="col-sm-6">
                                        <a class="tooltip-test ico-animation text-center" title='CANDIDATO' href="@Url.Action("Index","Candidatos")"><i class="fas fa-user-tie"></i></a>
                                        <p class="text-center">Candidato</p>
                                    </div>
                                </div>
                             </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <footer>
        </footer>
    </div>
    <script>
        function Toast(tipo, msj) {
            cuteToast({
                type: tipo,
                message: msj,
                timer: 5000
            })

        }
    </script>

    @RenderSection("scripts", required: false)
    @{
        var ruta = HttpContext.Current.Request.RequestContext.RouteData.Values["controller"].ToString();
        var action = HttpContext.Current.Request.RequestContext.RouteData.Values["action"].ToString();
    }
    @if (ruta == "Portada")
    {
        <script src="~/Scripts/js/inicio.js"></script>
    }
    @if (ruta == "Login")
    {
        <script src="~/Scripts/js/login.js"></script>
    }
    @if (ruta == "Candidatos")
    {
        if (action == "Index")
        {
            <script src="~/Scripts/js/registroCandidato.js"></script>
        }
    }
    @if (ruta == "Empresas")
    {
        if (action == "Index")
        {
            <script src="~/Scripts/js/registroEmpresa.js"></script>
        }
    }

</body>
</html>
