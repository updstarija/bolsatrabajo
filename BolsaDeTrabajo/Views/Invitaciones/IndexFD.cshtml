
@{
    ViewBag.Title = "IndexFD";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-personalizado">
    <div class="shadow-lg p-3 bg-white rounded pl-5 pr-5 pb-5 mt-4">
        <div id="cargandoinvitacinesFD" class="text-center">
            <div class="spinner-border" role="status">
                <span class="sr-only">Loading...</span>
            </div>
        </div>
        <div class="table-responsive-lg" id="contenidoTInvitacionesFD">
            <br />
            <div class="d-flex flex-row bd-highlight">
                <div class="bd-highlight container-icono-titulo rounded-circle shadow">
                    <span class="fas fa-mail-bulk icono"></span>
                </div>
                <div class="ml-2 bd-highlight container-titulos">
                    <span class="font-weight-bold titulo">Invitaciones de Forma Directa</span><br />
                    <span class="text-secondary font-italic parrafo">Lista de los candidatos invitados de forma directa a un empleo específico</span>
                </div>
            </div>
            <br />
            <table id="tInvitacionesFD" class="table table-striped display mx-0 my-table-DT animated slideInLeft" style="width:100%"></table>
        </div>
    </div>
</div>

<div class="modal fade" id="ModalInvitado" data-backdrop="static" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-start modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="titulo"></h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div id="MBInvitado" class="modal-body mx-1">
                <div id="seccionCurriculumC" class="style-marco1 mt-3 pb-2">
                </div>
            </div>
        </div>
    </div>
</div>

<script src="~/Scripts/js/jQuery.print.min.js"></script>

