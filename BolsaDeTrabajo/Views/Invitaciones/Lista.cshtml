
@{
    ViewBag.Title = "Lista";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container-personalizado">
    <div class="shadow-lg p-3 bg-white rounded pl-5 pr-5 pb-5 mt-4">
        <div id="cargandoinvitacines" class="text-center">
            <div class="spinner-border text-primary" style=" margin: 300px; width: 3rem; height: 3rem;" role="status">
                <span class="sr-only">Loading...</span>
            </div>
        </div>
        <div class="table-responsive-lg" id="contenidoTInvitaciones">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb bg-white d-flex justify-content-end">
                    <li class="breadcrumb-item active" aria-current="page">Invitaciones</li>
                </ol>
            </nav>
            <div class="d-flex flex-row bd-highlight">
                <div class="bd-highlight container-icono-titulo rounded-circle shadow">
                    <span class="fas fa-envelope icono"></span>
                </div>
                <div class="ml-2 bd-highlight container-titulos">
                    <span class="font-weight-bold titulo">Invitaciones</span><br />
                    <span class="text-secondary font-italic parrafo">Lista de las invitaciones relizadas por las empresas al usuario</span>
                </div>
            </div>
            <br />
            <table id="tInvitacionesIndex" class="table table-striped display mx-0 my-table-DT animated slideInLeft" style="width:100%"></table>
        </div>
    </div>
</div>
