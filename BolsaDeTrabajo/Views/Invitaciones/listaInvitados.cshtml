
@{
    ViewBag.Title = "listaInvitados";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container-personalizado">
    <div class="shadow-lg p-3 bg-white rounded pl-5 pr-5 pb-5 mt-4">
        <input type="hidden" name="IdEmpleo" id="IdEmpleo" value="@ViewBag.IdEmpleo" />

        <div id="cargandoinvitaciones" class="text-center">
            <div class="spinner-border" role="status">
                <span class="sr-only">Loading...</span>
            </div>
        </div>
        <div class="table-responsive-lg" id="contenidoTInvitados">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb bg-white d-flex justify-content-end">

                    <!--************* Local ****************-->
                    @*<li class="breadcrumb-item"><a href="https://localhost:44351/Invitaciones">Invitaciones a Empleos</a></li>
                <li class="breadcrumb-item active" aria-current="page">Invitados</li>*@

                    <!--************* Produccion ****************-->
                    <li class="breadcrumb-item"><a href="https://tarija.upds.edu.bo/UpdsTrabaja/Invitaciones">Invitaciones a Empleos</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Invitados</li>

                </ol>
            </nav>
            <div class="d-flex flex-row bd-highlight">
                <div class="bd-highlight container-icono-titulo rounded-circle shadow">
                    <span class="fas fa-users icono"></span>
                </div>
                <div class="ml-2 bd-highlight container-titulos">
                    <span class="font-weight-bold titulo">Invitados</span><br />
                    <span class="text-secondary font-italic parrafo">Lista de los candidatos invitados a postularse a un empleo</span>
                </div>
            </div>
            <br />
            <table id="tInvitadosLista" class="table table-striped display mx-0 my-table-DT" style="width:100%"></table>
        </div>
    </div>
</div>

<div class="modal fade" id="ModalInvitado" data-backdrop="static" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-start modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="titulo"></h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div id="MBInvitado"class="modal-body mx-1">
                <div id="seccionCurriculumC" class="style-marco1 mt-3 pb-2"></div>
            </div>
        </div>
    </div>
</div>

<script src="~/Scripts/js/jQuery.print.min.js"></script>
