@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-personalizado">
    <div class="shadow-lg p-3 bg-white rounded pl-5 pr-5 pb-5 mt-4">
        <br>
        <div class="d-flex flex-row bd-highlight">
            <div class="bd-highlight container-icono-titulo rounded-circle shadow">
                <span class="fas fa-id-badge icono"></span>
            </div>
            <div class="ml-2 bd-highlight container-titulos">
                <span class="font-weight-bold titulo">Mis Curriculums</span><br />
                <span class="text-secondary font-italic parrafo">Lista de los curriculums creados</span>
            </div>
        </div>
        <br>
        <div class="table-responsive-lg">
            <table class="table table-hover table-striped my-table-DT">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Titulo</th>
                        <th>Fecha de Registro</th>
                        <th>Fecha de Actualización</th>
                        <th>Carrera</th>
                        <th>Privacidad</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody id="itemsCurriculosC">
                </tbody>
            </table>
        </div>
    </div>

    <a class="btn btn-Blue-par my-2 animated slideInLeft"  href="@Url.Action("Curriculo","Curriculos")">
        <div class="tooltip-personalizado"><p>Agregar Curriculum</p></div>+
    </a>

    <div class="modal fade" id="ModalCurriculo" data-backdrop="static" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-start modal-lg">
            <div class="modal-content">
                <div id="MBPostulante" class="modal-body mx-1">
                    <div id="seccionCurriculoC" class="style-marco1 mt-3 pb-2">

                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>
                </div>
            </div>
        </div>
    </div>
</div>
