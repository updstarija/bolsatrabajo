
@{
    ViewBag.Title = "Lista";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-personalizado">
    <div class="shadow-lg p-3 bg-white rounded pl-5 pr-5 pb-5 mt-4">
        <div id="cargando" class="text-center">
            <div class="spinner-border" role="status">
                <span class="sr-only">Loading...</span>
            </div>
        </div>
        <input type="hidden" name="IdEmpleo" id="IdEmpleo" value="@ViewBag.IdEmpleo" />
        <div class="table-responsive" id="contenido">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb bg-white">
                    <!--************* Local ****************-->
                    @*<li class="breadcrumb-item"><a href="https://localhost:44351/Empleos">Publicaciones de Empleos</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Postulantes</li>*@

                    <!--************* Produccion ****************-->
                    <li class="breadcrumb-item"><a href="https://tarija.upds.edu.bo/UpdsTrabaja/Empleos">Publicaciones de Empleos</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Postulantes</li>
                </ol>
            </nav>
            <h2 class="text-center">Postulantes</h2>
            <br />
            <table id="tPostulantes" class="table table-striped display mx-0 mt-3" style="width:100%"></table>
            <div id="divBtnConcluirEmpleo" class="d-flex justify-content-center mt-2">
                <button type="button" id="btnConcluirEmpleo" class="btn btn-Blue" onclick="ConcluirEmpleoComfirm()"><i class="fas fa-save"></i> Concluir Empleo</button>
            </div>
        </div>
    </div>
</div>


<div class="modal fade" id="ModalPostulante" data-backdrop="static" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-start modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="titulo"></h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div id="MBPostulante" class="modal-body mx-1">
                <div id="seccionPostulanteC" class="style-postulante">

                </div>
                <div id="seccionCurriculumC" class="style-marco1 mt-3 pb-2">

                </div>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="ModalConcluirPostulacion" data-backdrop="static" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-start modal-md">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title font-weight-bolder" id="titulo">Concluir Empleo</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body mx-1">
                <div class="container-fluid">
                    <p style="font-size:13px;">El siguiente mensaje sera enviado a todos los candidatos aceptados.</p>
                    <form id="formConcluirEmpleo" class="needs-validationEC" novalidate>
                        <div class="form-group">
                            <label for="Asunto">Asunto:</label>
                            <input type="text" name="AsuntoM" id="AsuntoM" class="form-control" required>
                            <div class="invalid-feedback">¡Campo Vacio!</div>
                        </div>
                        <div class="form-row">
                            <div class="col-12">
                                <label for="MensajeM">Mensaje</label>
                                <textarea class="form-control w-100" id="MensajeM" name="MensajeM" style="resize: none; height: 300px;" required></textarea>
                                <div class="invalid-feedback">¡Campo Vacio!</div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
            <div class="modal-footer">
                <div class="row w-100">
                    <div class="col-12 py-1 py-sm-0 col-sm-7 px-1">
                        <button id="btnCE" type="button" class="btn btn-Blue btn-block" onclick="ConcluirEmpleo()">Enviar</button>
                    </div>
                    <div class="col-12 py-1 py-sm-0 col-sm-5 px-1">
                        <button type="button" id="btnCE" class="btn btn-secondary btn-block" data-dismiss="modal">Cerrar</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



